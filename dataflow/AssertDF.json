{
	"name": "AssertDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Employee",
						"type": "DatasetReference"
					},
					"name": "Employee"
				},
				{
					"dataset": {
						"referenceName": "dept",
						"type": "DatasetReference"
					},
					"name": "dept"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "assert1"
				},
				{
					"name": "derivedColumn2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as short,",
				"          name as string,",
				"          salary as short,",
				"          deptid as short,",
				"          country as string,",
				"          joindate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Employee",
				"source(output(",
				"          deptid as string,",
				"          deptname as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> dept",
				"Employee derive(newJoinDate = toDate(joindate,'ddMMyyyy')) ~> derivedColumn1",
				"derivedColumn1, dept assert(expectTrue(!isNull(toDate(joindate,'ddMMyyyy')), false, 'assertdate'),",
				"     expectExists(Employee@deptid == toInteger(dept@deptid), false, 'assertDept'),",
				"     expectUnique(id, false, 'assertid')) ~> assert1",
				"assert1 derive(errored = isError(),",
				"          joinDateErroed = hasError('assertdate')) ~> derivedColumn2"
			]
		}
	}
}